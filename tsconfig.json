{
    "compilerOptions": {
        "jsx": "react",
        "target": "es2019",
        "module": "commonjs",
        "lib": ["dom", "es2019"],
        "experimentalDecorators": true,
        "composite": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": false,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
}
